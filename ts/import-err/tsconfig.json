{
    "compilerOptions": {
			"baseUrl" : "./ts",
			"module": "es2015",
			"moduleResolution": "node",
			"alwaysStrict" : true,
			"noImplicitAny": true,
			"noImplicitThis" : true,
			"strictNullChecks" : false,
			"removeComments": false,
			"preserveConstEnums": true,
			"sourceMap": true,
			"target": "es6",
			"lib" : ["dom","es6","dom.iterable","scripthost","es2016"],
			"noEmitOnError" : true,
			"forceConsistentCasingInFileNames": true,
			"outDir": "./build",
    },
    "include" : [
        "*.ts"
    ]
}
